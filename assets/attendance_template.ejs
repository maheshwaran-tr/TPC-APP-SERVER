<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Attendance Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }
        h1 {
            text-align: center;
        }
        #l2 {
            width: 100px; 
        }
        #l1 {
            width: 90px; 
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .images {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }
        .title-description {
            text-align: center;
            width: 60%;
        }
        .title {
            font-size: 1.5em;
            margin-top: 20px;
        }
        .description {
            margin-top: 10px;
            font-size: 1em;
        }
        table {
            width: 100%;
            margin-top: 30px;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: center;
            font-size: 0.8em;
        }
        th {
            background-color: #f2f2f2;
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            font-size: 0.5em;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <div class="header">
        <img src="https://pbywhmrgjtkosnsdunvc.supabase.co/storage/v1/object/public/sit-tpc/drive-docs/sit.jpg" alt="Logo" class="logo" id="l1">
        
        <img src="https://pbywhmrgjtkosnsdunvc.supabase.co/storage/v1/object/public/sit-tpc/drive-docs/sit3.png" class="centerPic">

        <img src="https://pbywhmrgjtkosnsdunvc.supabase.co/storage/v1/object/public/sit-tpc/drive-docs/tpc.png" alt="Secondary Image" class="logo" id="l2">
    </div>

    <!-- Title and Date -->
    <h1>Training Attendance Report</h1>
    <p style="text-align: center; font-size: 1.2em;"><strong>Date:</strong> <%= requestedDate %></p>

    <!-- Table Section -->
    <table>
        <thead>
            <tr>
                <% headers.forEach(header => { %>
                    <th><%= header %></th>
                <% }); %>
            </tr>
        </thead>
        <tbody>
            <% if (attendanceRecords.length > 0) { %>
                <% attendanceRecords.forEach(record => { %>
                    <tr>
                        <td><%= record.rollNo %></td>
                        <td><%= record.name %></td>
                        <td><%= record.department %></td>
                        <td><%= record.status %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="4">No attendance records found for this date.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <!-- Footer Section -->
    <div class="footer">
        <p>Generated by Training and Placement Cell Application</p>
    </div>

</body>
</html>
